    <TimeLineElement
      title="Associate Programmer Trainee"
      subtitle="From [2020] to [2020] at [Techneurons Consulting Solutions], [India]"
    >
    </TimeLineElement>
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Certifications</div>
  </div>

  <ul class="list-disc mx-6 mb-10 grid gap-2">
    <li>
      <a href="#" target="_blank"> Azure Administrator Associate - AZ 104</a>
      <img src="/azure-administrator-associate.png" width="100" height="100"> 
    </li>
    <li>
      <a href="#" target="_blank"> Project Management</a>
    </li>
  </ul>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <ul class="list-disc md:columns-5 columns-2 mx-6">
    <li>Azure</li>
    <li>C#</li>
    <li>JavaScript</li>
    <li>Stakeholder Management</li>
    <li>Project Management</li>

  </ul>
</BaseLayout>
