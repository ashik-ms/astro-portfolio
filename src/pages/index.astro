---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const BASE = import.meta.env.BASE_URL && import.meta.env.BASE_URL !== '/' ? import.meta.env.BASE_URL : '';

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Fetch and sort projects
const projects = (await getCollection("project")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_projects = projects.slice(0, 3);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Ashik Sali</div>
    <div class="text-3xl py-3 font-bold">Product Person and Technology Enthusiast</div>
    <div class="py-2">
      <text class="text-lg">
        Incoming Information Systems graduate student. A product person who turns  ideas into  products, fueled by a steady stream of caffeine and occasional 'aha!' moments in the shower
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://linkedin.com/in/ashik-sali" target="_blank"> Let's connect!</a>
      <a href="mailto:ashik.salih@gmail.com" target="_blank" class="btn btn-outline ml-5">
        Email me
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  {
    last_projects.map((project) => (
      <>
        <HorizontalCard
          title={project.data.title}
          img={project.data.heroImage}
          desc={project.data.description}
          url={(BASE ? `${BASE}/project/` : '/project/') + createSlug(project.data.title, project.slug)}
          target="_self"
          badge={project.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }


  <div class="divider my-0"></div>


  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={(BASE ? `${BASE}/blog/` : '/blog/') + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
